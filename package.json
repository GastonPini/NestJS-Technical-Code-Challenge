{
  "name": "aladia-nest-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start:gateway": "node -r ts-node/register --loader ts-node/esm apps/gateway/src/main.ts",
    "dev:gateway": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --project tsconfig.json apps/gateway/src/main.ts",
    "dev:authentication": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --project tsconfig.json apps/authentication/src/main.ts",
    "dev": "concurrently \"npm:dev:gateway\" \"npm:dev:authentication\"",
    "build": "echo \"build step - optional\""
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "axios": "^1.13.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "concurrently": "^8.0.0",
    "mongoose": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^4.6.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
